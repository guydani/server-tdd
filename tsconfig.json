{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "build",
		"allowSyntheticDefaultImports": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"strictNullChecks": true,
		"lib": ["dom", "es2018"],
		"resolveJsonModule": true,
		"strict": true,
		"baseUrl": "src",
		"typeRoots": ["node_modules/@types"]
	},
	"exclude": ["build", "node_modules"],
	"include": ["src/**/*.ts"]
}
