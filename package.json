{
	"name": "server-tdd",
	"version": "0.0.1",
	"description": "TDD server using node, express, ts + postgresql",
	"main": "build/server.js",
	"scripts": {
		"db:drop": "dropdb",
		"db:create": "createdb",
		"db:migrate": "yarn migrate up",
		"migrate": "ts-node node_modules/.bin/node-pg-migrate -j ts",
		"start:watch": "nodemon -r esm -r ts-node/register ./src/server.ts",
		"start": "tsc && node start.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/guydani/server-tdd.git"
	},
	"author": "Guy Dani",
	"license": "MIT",
	"dependencies": {
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"node-pg-migrate": "^4.2.1",
		"pg": "^7.17.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.2",
		"@types/node": "^12.12.17",
		"esm": "^3.2.25",
		"ts-node": "^8.5.4",
		"tslint": "^5.20.1",
		"typescript": "^3.7.3",
		"nodemon": "^2.0.2"
	},
	"engineStrict": true,
	"engines": {
		"node": "12.14.1"
	}
}
